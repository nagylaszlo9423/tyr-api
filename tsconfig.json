{
  "compilerOptions": {
    "outDir": "./dist",
    "declarationDir": "./types",
    "sourceMap": true,
    "declaration": true,
    "noImplicitReturns": false,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "target": "es5",
    "strict": true,
    "module": "commonjs",
    "rootDir": "./src",
    "typeRoots": ["node_modules/@types"],
    "removeComments": true,
    "lib": [
      "dom",
      "es2015"
    ]
  },
  "exclude": [
    "node_modules",
    "types",
    "dist"
  ]
}
